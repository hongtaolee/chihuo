
<% content_for :content do %>
<div class="row">

  <div class="col-md-4">
    <%= link_to '+ 添加餐馆', new_group_restaurant_path(@group), class: "btn btn-default btn-block", style: "margin-bottom: 20px;" %>


    <div class="list-group">

      <% @restaurants.each do |restaurant| %>
      <a href="<%= group_restaurant_path(@group, restaurant) %>" class="list-group-item <%= 'active' if restaurant.id == params[:id].to_i %>">
        <%= restaurant.name %>
      </a>
      <% end %>
    </div>
  </div>

  <div class="col-md-8">
    <%= yield %>
  </div>
</div>
<% end %>

<%= render template: "layouts/application" %>