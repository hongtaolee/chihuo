<%# notice & alert %>
<% unless notice.blank? && alert.blank? %>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <% unless notice.blank? %>
              <p class="notice alert alert-info alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <%= notice %>
              </p>
          <% end %>
          <% unless alert.blank? %>
              <p class="alert alert alert-warning">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <%= alert %>
              </p>
          <% end %>
        </div>
      </div>
    </div>
<% end %>
